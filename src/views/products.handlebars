<h1>Detalles de productos</h1>

<div class='col-md-3 mx-2 my-3'>
    <div class="card w-100 mt-5">
        <div class="card-header bg-dark text-white">
            {{title}}
        </div>
        <div class="card-body">
            <img src={{thumbnail}} class="card-img" alt="Product img">
            <br />
            Price: $ {{price}}
            <br />
            Stock : {{stock}}

            <div class="card-body gap-2">
                <form action="/api/carts/{{user.cart}}/product/{{pid}}" method="post">
                    <div class="input-group mb-3">
                        <button class="btn btn-outline-dark btn-sm " type="submit">Agregar al carrito</button>
                        <input type="number" name="quantity" class="form-control" aria-describedby="button-addon1"
                            required>
                    </div>
                </form>
                <form action="/api/products/" method="get">
                    <button class="btn btn-outline-dark btn-sm mb-3 px-5" type="submit">Volver a productos</button>
                </form>
            </div>
        </div>
    </div>
</div>