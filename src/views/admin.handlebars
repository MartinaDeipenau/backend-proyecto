<h1>Admin Panel</h1>

<h2>Admin users</h2>

<div class="card-body pb-0 pt-2">
    <form action="/api/user/updateAllActiveUsers" method="post">
        <button class="btn btn-outline-primary btn-sm mb-3 px-5" type="submit">Check if users are active</button>
    </form>
</div>
<div class="card-body py-0">
    <form action="/api/user/deleteInactiveUsers?_method=DELETE" method="POST">
        <button class="btn btn-outline-danger btn-sm mb-1  px-5" type="submit">DELETE ALL INACTIVE USERS</button>
    </form>
</div>
<div class="d-flex flex-wrap mt-1">
    {{#each users}}
    <div class='col-md-3 mx-2 mt-1'>
        <div class="card w-100 mt-0">
            <div class="card-header text-white bg-dark">
                {{first_name }} {{last_name}}
            </div>
            <div class="card-body">
                User ID: {{_id }}
                <br />
                Role: {{role}}
                <br />
                Last connection : {{last_connections}}
                <br />
                User active : {{active}}
                <br />
            </div>
            <div class="card-body">
                <form action="/api/user/primium/{{_id}}" method="post">
                    <button class="btn btn-outline-dark btn-sm mb-3 px-5" type="submit">Change status
                        (user/premium)</button>
                </form>
            </div>
            <div class="card-body">
                <form action="/api/user/deleteone/{{_id}}?_method=DELETE" method="POST">
                    <button class="btn btn-outline-danger btn-sm mb-3 px-5" type="submit">DELETE USER</button>
                </form>
            </div>
        </div>
    </div>
    {{/each}}